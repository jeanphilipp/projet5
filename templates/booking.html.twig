{% extends 'base.html.twig' %}
{% block title %}Qui sommes-nous ?{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
    {% block content %}
      <span> Pour inscrire un nouveau chat : <a class="btn btn-secondary" href="{{ path('app_home_create') }}" role="button">Cliquez ici</a></span>
        <hr>
<table class="table table-bordered table-striped table-condensed">
    <thead>
    <tr>
        <th>Réservations en cours</th>
        <th>Nom du chat</th>
        <th>Prix du sejour </th>
    </tr>
    </thead>
        {% for booking in bookings %}
            <tr>
                <td>du {{ booking.startDate |date('d-m-Y') }} au {{ booking.exitDate |date('d-m-Y') }}</td>
                <td>{{ booking.cat }}</td>
                <td>{{ booking.priceStay }} euros</td>
                <td><a href="#">Modifier</a></td>
                <td><a href="{{ path('app_booking_delete', {id:booking.id}) }}">Supprimer</a></td>
            </tr>
        {% endfor %}
</table>
        {{ form_start(form) }}
           {{ form_row(form.cat,{'label':'Nom du chat'}) }}
           {{ form_row(form.startDate,{'label':'Date d\'entrée'}) }}
           {{ form_row(form.exitDate,{'label':'Date de sortie'}) }}
        {{ form_end(form) }}
    {% endblock %}
