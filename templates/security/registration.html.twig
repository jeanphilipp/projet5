{% extends 'base.html.twig' %}
{% block title %}Créez votre compte{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block body %}
    <div class="container">
        {% block content %}
            <div class="row">
                <div class="col-12">
                    <p class="h4">Créez votre compte </p>
                   {% if errors|length > 0 %}
                         {% for error in errors %}
                             <p>{{ error }}</p>
                         {% endfor %}
                    {% endif %}
                    {{ form_start(form) }}
                       {{ form_row(form.pseudo,{'label':'Pseudo','attr': {'placeholder':'Votre pseudo'}}) }}
                       {{ form_row(form.email,{'label':'Email','attr': {'placeholder':'Votre email'}}) }}
                       {{ form_row(form.password,{'label':'Mot de passe','attr': {'placeholder':'Votre mot de passe'}}) }}
                       {{ form_row(form.confirm_password,{'label':'Confirmation mot de passe','attr': {'placeholder':'Répétez votre mot de passe'}}) }}
                    <button type="submit" class="btn btn-secondary">S'incrire</button>
                    {{ form_end(form) }}
                    {{ message }}
                </div>
            </div>
        {% endblock %}
    </div>
{% endblock %}