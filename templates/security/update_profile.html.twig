{% extends 'base.html.twig' %}
{% block title %}Modification compte{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block body %}
    <div class="container">
        {% block content %}
            <div class="row">
                <div class="col-12">
                    <p class="h4">Modifier votre compte : </p>
                    <br />

                    <form method="POST">
                        <label for="pass">Email</label>
                        <input type="Email" placeholder="Email" name="{{ app.user.email }}" class="form-control" required>
                        <label for="pass">Mot de passe actuel</label>
                        <input type="password" placeholder="Mot de passe actuel" name="password" class="form-control" required>
                        <label for="pass">Nouveau mot de passe</label>
                        <input type="password" placeholder="Nouveau mot de passe" name="password" class="form-control" required>
                        <label for="pass">Confirmez votre mot de passe</label>
                        <input type="password" placeholder="Confirmez votre nouveau mot de passe" name="password" class="form-control" required>
                        <br />
                        <button type="submit" class="btn btn-secondary">Enregistrer</button>
                    </form>
                </div>
            </div>
        {% endblock %}
    </div>

{% endblock %}