{% extends 'base.html.twig' %}
{% block title %}Modification compte{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block body %}
    <div class="container">
        {% block content %}
            <div class="row">
                <div class="col-12">
                    <p class="font-weight-bold">{{ message }}</p>
                    <p class="h4">Modifier votre compte : </p>
                    <br />
                    {{ form_start(form) }}
                    {{ form_row(form.email,{'label':'Email','attr': {'placeholder':'Votre email'}}) }}
                    {{ form_row(form.password,{'label':'Mot de passe','attr': {'placeholder':'Votre mot de passe'}}) }}
                    {{ form_row(form.confirm_password,{'label':'Confirmation mot de passe','attr': {'placeholder':'Répétez votre mot de passe'}}) }}
                    <button type="submit" class="btn btn-secondary">Enregistrer</button>
                    {{ form_end(form) }}
                </div>
            </div>
        {% endblock %}
    </div>
{% endblock %}